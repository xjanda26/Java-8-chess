<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="guiWindow" prefHeight="662.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ija.ija2018.homework2.view.Menu">
   <children>
      <TabPane fx:id="tabPane" prefHeight="600.0" prefWidth="850.0">
         <tabs>
            <Tab fx:id="tabMenu" closable="false" text="Menu">
               <content>
                  <VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="50.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="IJA Chess" />
                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Button fx:id="btnNewGame" mnemonicParsing="false" onAction="#newGame" prefHeight="25.0" prefWidth="86.0" text="Nová hra" />
                              <Button fx:id="btnLoadGame" mnemonicParsing="false" onAction="#loadGame" prefHeight="25.0" prefWidth="86.0" text="Načítať hru" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</AnchorPane>
